        android:background="@drawable/shape1"
        android:onClick="@{() -> clickListener.onButtonClick(4)}"
        android:scaleType="fitXY"
        android:src="@drawable/anahata4"
        app:layout_constraintBottom_toTopOf="@+id/chakra3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/chakra5"
