        android:src="@drawable/vishuddha5"
        app:layout_constraintBottom_toTopOf="@+id/chakra4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/chakra6"
        android:layout_width="69dp"
        android:layout_height="64dp"
        android:layout_marginStart="171dp"
        android:layout_marginEnd="171dp"
        android:background="@drawable/shape1"
        android:onClick="@{() -> clickListener.onButtonClick(6)}"
        android:scaleType="fitXY"
        android:src="@drawable/ajna6"
        app:layout_constraintBottom_toTopOf="@+id/chakra5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chakra7" />

    <ImageButton
        android:id="@+id/chakra7"
        android:layout_width="67dp"
        android:layout_height="66dp"
        android:layout_marginStart="171dp"
        android:layout_marginTop="106dp"
        android:layout_marginEnd="173dp"
        android:background="@drawable/shape1"
        android:onClick="@{() -> clickListener.onButtonClick(7)}"
        android:scaleType="fitXY"
        android:src="@drawable/sahasrara7"
        app:layout_constraintBottom_toTopOf="@+id/chakra6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

